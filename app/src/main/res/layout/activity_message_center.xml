<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MessageCenter">

    <TextView
            android:text="TextView"
            android:layout_width="311dp"
            android:layout_height="319dp"
            android:id="@+id/InboxTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="72dp" />

    <Button
            android:text="Clear Inbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteInboxButton"
            app:layout_constraintTop_toBottomOf="@+id/InboxTextView"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:text="Compose Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ComposeMessageButton"
            app:layout_constraintTop_toBottomOf="@+id/deleteInboxButton"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:text="Inbox"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="69dp"
            android:layout_height="22dp"
            android:id="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/InboxTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="36dp" />
</androidx.constraintlayout.widget.ConstraintLayout>