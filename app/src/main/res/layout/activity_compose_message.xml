<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ComposeMessage">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Recepient userID"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/composeMessageRecipientUserIDInput"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="224dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" />

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="197dp"
            android:id="@+id/messageBodyTextInputLayout">

    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MessageSendButton"
            app:layout_constraintTop_toBottomOf="@+id/composeMessageRecipientUserIDInput"
            android:layout_marginTop="124dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/composeMessageBodyInput"
            android:layout_height="122dp"
            android:hint="Enter Message Body"
            tools:layout_editor_absoluteY="20dp"
            tools:layout_editor_absoluteX="-1dp" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Enter Subject"
            android:ems="10"
            android:id="@+id/composeMessageSubjectInput"
            app:layout_constraintTop_toBottomOf="@+id/composeMessageRecipientUserIDInput"
            android:layout_marginTop="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>