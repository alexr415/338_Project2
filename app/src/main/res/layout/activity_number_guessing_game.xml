<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".numberGuessingGameActivity">

    <Button
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" />

    <TextView
            android:text="Guess a Number between 1 and 100"
            android:layout_width="283dp"
            android:layout_height="32dp"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.16" />

    <TextView
            android:text="guesses remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guessesLeft"
            app:layout_constraintBottom_toTopOf="@+id/NumberGuessInput"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501" />

    <TextView
            android:text="Take a guess!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberGuessHint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="80dp"
            app:layout_constraintHorizontal_bias="0.498" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/NumberGuessInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="152dp"
            app:layout_constraintHorizontal_bias="0.497" />

    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumberGuessSubmitButton"
            app:layout_constraintTop_toBottomOf="@+id/NumberGuessInput"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:text="previous high score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previousHighScore"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="44dp"
            app:layout_constraintHorizontal_bias="0.498" />

    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adminNumberGuessAnswerTextView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" />


</androidx.constraintlayout.widget.ConstraintLayout>